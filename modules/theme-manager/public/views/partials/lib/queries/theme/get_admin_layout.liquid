{% liquid
  function theme_admin_layout_implementations = 'modules/core/commands/hook/fire', hook: 'theme_admin_layout'
  function main_theme = 'modules/theme-manager/lib/queries/theme/get_main'

  if main_theme == blank
    return nil
  endif

  assign theme_admin_layout = theme_admin_layout_implementations | array_detect: theme: main_theme

  if theme_admin_layout == blank
    return nil
  endif

  return theme_admin_layout.admin_layout
%}
